
public class DeclaracionVariable {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		byte edad;
		
		edad=27; //esto no saca la advertencia de que no se usó porque declarqar no es usar
		byte edad2=28; //esto es iniciar y declarar en la misma línea
		
		edad=45; //acá hica una variaciòn, cambié el valor de la variable
		
		System.out.println(edad);//ahora SI quitò la advertencia que no era  usada la variable
		//el resultado es el último valor si esta línea de código está al final
		
		System.out.println(edad2);
		
		edad2=87;
		System.out.println(edad2);
		
				
	}

}
