
public class ConcatenacionStrings {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		double salario=1850.55;
		
		double salarioEnDolares=1850.55*1.2;
		
		System.out.println("El salario de Manuel es: " + salarioEnDolares + " a día de hoy");
		
		
		
		System.out.println("El salario es: " + salario*2 + " a dia de hoy");
		/* ojo con lo que viene, toma todo string y da 1850.55300*/
		
		System.out.println("El salario es: " + salario + 300 + " a dia de hoy");
	}

}
